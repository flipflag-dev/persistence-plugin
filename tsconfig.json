{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019",
    "lib": ["ES2019", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "noEmitOnError": true,
    "declaration": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "out-tsc",
    "rootDir": ".",

    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
